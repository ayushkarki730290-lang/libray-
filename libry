#include <iostream>
#include <string>
using namespace std;

class Library {
public:
    int id;
    string name;
    string author;
    int price;
    int page;
};

int main() {
    Library lb[20];
    int input = 0;
    int count = 0;

    while (input != 3) {
        cout << "\nEnter 1 to add book details" << endl;
        cout << "Enter 2 to display book details" << endl;
        cout << "Enter 3 to quit" << endl;

        cin >> input;

        switch (input) {

        case 1:
            if (count >= 20) {
                cout << "Library is full!" << endl;
                break;
            }
            cout << "Enter Book ID: ";
            cin >> lb[count].id;

            cout << "Enter Book Name: ";
            cin >> lb[count].name;

            cout << "Enter Author Name: ";
            cin >> lb[count].author;

            cout << "Enter Price: ";
            cin >> lb[count].price;

            cout << "Enter Pages: ";
            cin >> lb[count].page;

            count++;
            break;

        case 2:
            if (count == 0) {
                cout << "No books to display!" << endl;
            } else {
                for (int i = 0; i < count; i++) {
                    cout << "\nBook " << i + 1 << endl;
                    cout << "ID: " << lb[i].id << endl;
                    cout << "Name: " << lb[i].name << endl;
                    cout << "Author: " << lb[i].author << endl;
                    cout << "Price: " << lb[i].price << endl;
                    cout << "Pages: " << lb[i].page << endl;
                }
            }
            break;

        case 3:
            cout << "Exiting program..." << endl;
            break;

        default:
            cout << "Invalid choice!" << endl;
        }
    }

    return 0;
}
